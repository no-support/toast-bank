generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  name        String
  Credit      Credit?
  Transaction Transaction[]
}

model Faq {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
}

model Card {
  id             Int      @id @default(autoincrement())
  name           String
  corpName       String
  tags           String[]
  benefit        String[]
  promotionTitle String?
  promotionTerms String?
  payback        String?
}

model Transaction {
  id          Int      @id @default(autoincrement())
  email       String   @map("userId")
  type        String
  date        DateTime
  displayText String
  amount      Int
  balance     Int
  user        User     @relation(fields: [email], references: [email])
}

model Credit {
  id    Int    @id @default(autoincrement())
  email String @unique
  score Int
  user  User   @relation(fields: [email], references: [email])
}
